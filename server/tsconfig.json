{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      },
      "typeRoots": ["./node_modules/@types", "./server/types"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }